{
  "name": "Tabby Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },
  "postCreateCommand": "./.devcontainer/setup_tabby.sh",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Tabby Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["TabbyML.vscode-tabby"],
      "settings": {
        "tabby.api.endpoint": "http://localhost:8080"
      }
    }
  }
}
