{
  "name": "Tabby Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "mobs": true
    }
  },
    "onCreateCommand": "chmod +x ./.devcontainer/wait_for_docker.sh",
  "postCreateCommand": "./.devcontainer/wait_for_docker.sh && docker run -d --rm --gpus all -p 8080:8080 -v $HOME/.tabby:/data tabbyml/tabby serve --model StarCoder-1B",
  "portsAttributes": {
    "8080": {
      "label": "Tabby Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["TabbyML.vscode-tabby"]
    }
  }
}
